<div class="jumbotron" id="post-top">
    <h1><%- page.title %></h1>
    <h4 class="text-muted"><%- page.subtitle %></h4>
    <p class="date">
        <%= date(page.date, config.date_format) %>
        <button id="show-post-info-btn" class="btn btn-primary btn-md"  data-toggle="modal" data-target="#page-info-modal">Post details</button>
    </p>
</div>
<%- page.content %>
<div id="page-info">
    <p id="tags"><span class="badge badge-secondary">Tags: </span>
        <% if (page.tags && page.tags.length) { %>
        <%- list_tags(page.tags, {
            show_count: false,
            class: "page-tag",
            style: "none",
            seperator: ","
        }) %>
        <% } %>
    </p>
    <p id="categories"><span class="badge badge-secondary">Categories: </span>
        <% if (page.categories && page.categories.length) { %>
        <%- list_categories(page.categories, {
            show_count: false,
            class: "page-category",
            style: "none",
            seperator: ","
        }) %>
        <% } %>
    </p>
</div>
<textarea id="copy-code-block" rows="1" cols="1" style="opacity: 0;"></textarea>
<div class="modal fade" id="page-info-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Post details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
            </div>
            <div class="modal-body">
                <p id="tags"><span class="page-info-badge badge badge-secondary">Tags:</span>
                    <% if (page.tags && page.tags.length) { %>
                    <%- list_tags(page.tags, {
                        show_count: false,
                        class: "page-tag",
                        style: "none",
                        seperator: ","
                    }) %>
                    <% } %>
                </p>
                <p id="categories"><span class="page-info-badge badge badge-secondary">Categories:</span>
                    <% if (page.categories && page.categories.length) { %>
                    <%- list_categories(page.categories, {
                        show_count: false,
                        class: "page-category",
                        style: "none",
                        seperator: ","
                    }) %>
                    <% } %>
                </p>
                <p><span class="page-info-badge badge badge-secondary">Date published:</span><%= date(page.date, config.date_format) %></p>
                <p><span class="page-info-badge badge badge-secondary">Permalink:</span><a href="<%- page.permalink %>"><%- page.permalink %></a></p>
                <p><%- partial("partials/extra_post_info.ejs") %></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>